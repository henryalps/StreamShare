<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@null"
              android:descendantFocusability="blocksDescendants"
              android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent" >




            <LinearLayout
                android:id="@+id/steam_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal" >
                <ImageView
                    android:id="@+id/iv_left_div"
                    android:layout_width="15dp"
                    android:layout_height="1dp"
                    android:tag="ivLeftDiv"
                    android:visibility="visible" />



                <LinearLayout
                    android:id="@+id/lr_mysubscirbe_common"
                    android:layout_width="wrap_content"
                    android:layout_height= "wrap_content"
                    android:orientation= "vertical">
                    <RelativeLayout
                        android:id="@+id/rl_mysubscirbe_image"
                        android:layout_width="130dp"
                        android:layout_height="74dp"
                        android:layout_marginTop="15dp" >

                        <com.facebook.drawee.view.SimpleDraweeView
                            xmlns:TXImage="http://schemas.android.com/apk/res/com.tencent.qqlivebroadcast"
                            android:id="@+id/steam_image"
                            android:layout_width="130dp"
                            android:layout_height="74dp"
                            android:layout_centerInParent="true"
                            android:scaleType="centerCrop"
                            />



                    </RelativeLayout>


                </LinearLayout>


                <ImageView
                    android:id="@+id/iv_right_div"
                    android:layout_width="12dp"
                    android:layout_height="1dp"
                    android:layout_alignRight="@+id/tv_take_attention"
                    android:tag="ivRightDiv"
                    android:visibility="visible" />
                <LinearLayout
                    android:id="@+id/content_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@color/transparent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_steam_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center|left"
                        android:singleLine="true"

                        android:text="Girl&apos;s 直播"
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/tv_stem_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center|left"
                        android:singleLine="true"
                        android:layout_marginTop="7dp"
                        android:text="11月24日 17:03"
                        android:textColor="#7c91b2"
                        android:textSize="13dp"
                        />

                    <TextView
                        android:id="@+id/tv_steam_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center|left"
                        android:singleLine="true"
                        android:layout_marginTop="12dp"
                        android:text="11月24日 17:03"
                        android:textColor="#ff9933"
                        android:textSize="13dp" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_horizontal"
                android:background="#19FFFFFF" />


        </RelativeLayout>
    </LinearLayout>
